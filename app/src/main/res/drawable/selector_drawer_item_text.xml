<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@android:color/black" android:state_window_focused="false" />
    <item android:color="@color/yapster_green" android:state_selected="true"/>

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:color="@color/yapster_green" android:state_enabled="false" android:state_focused="true" android:state_pressed="true" />
    <item android:color="@color/yapster_green" android:state_enabled="false" android:state_focused="true" />
    <item android:color="@color/yapster_green" android:state_focused="true" android:state_pressed="true" />
    <item android:color="@color/yapster_green" android:state_focused="false" android:state_pressed="true" />
    <item android:color="@color/yapster_green" android:state_focused="true" />
    <item android:color="@android:color/black" />

</selector>