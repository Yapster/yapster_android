<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewYapImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default1" />

    <LinearLayout
        android:id="@+id/linearLayoutPlayerPlayingYapInfo"
        android:layout_width="160dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/imageViewYapImage"
        android:layout_toEndOf="@+id/imageViewYapImage">

        <TextView
            android:id="@+id/textViewYapTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="This is a test title of a yap."
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewYapUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Gurkaran Gulati - @gurkarangulati"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonPlayerPlayAndPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewYapImage"
        android:layout_alignTop="@+id/imageViewYapImage"
        android:layout_marginStart="00dp"
        android:layout_toEndOf="@+id/linearLayoutPlayerPlayingYapInfo"
        android:src="@drawable/ic_player_pause_black_no_circle_no_trim"
        android:background="@drawable/ripple_yapster_green"/>

    <ImageButton
        android:id="@+id/imageButtonPlayerNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewYapImage"
        android:layout_alignTop="@+id/imageViewYapImage"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageButtonPlayerPlayAndPause"
        android:src="@drawable/ic_player_next_black"
        android:background="@drawable/ripple_yapster_green"/>

    <ImageButton
        android:id="@+id/imageButtonX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewYapImage"
        android:layout_alignTop="@+id/imageViewYapImage"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageButtonPlayerNext"
        android:src="@drawable/ic_player_x_black"
        android:background="@drawable/ripple_yapster_green"/>


</RelativeLayout>