<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutForLibrary"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutForLibraryImage"
        android:layout_width="fill_parent"
        android:layout_height="227dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayoutForImageViewLibraryImage"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageViewLibraryImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textViewLibraryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_picture_text_gradient"
                android:paddingBottom="11dp"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="11dp"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutForListOfYaps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutForLibraryImage"
        android:animateLayoutChanges="true"
        android:showDividers="middle"
        android:divider="@drawable/shape_divider_light_grey"
        android:orientation="vertical"></LinearLayout>

